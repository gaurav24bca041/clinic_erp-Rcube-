<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Clinic ERP - Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    body {
      margin: 0;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #4facfe, #43e97b);
      background-size: 300% 300%;
      animation: gradientBG 8s ease infinite;
    }
    
    .register-box {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(15px);
      padding: 40px 35px;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 360px;
      color: white;
      animation: fadeIn 0.6s ease-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .register-box h2 {
      text-align: center;
      margin-bottom: 28px;
      font-weight: 600;
    }
    .input-group {
      position: relative;
      margin: 12px 0;
    }
    .register-box input {
      width: 100%;
      padding: 14px 40px 14px 14px;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      outline: none;
      background: rgba(255, 255, 255, 0.25);
      color: white;
      transition: all 0.3s ease;
    }
    .register-box input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }
    .register-box input:focus {
      background: rgba(255, 255, 255, 0.35);
      box-shadow: 0 0 6px rgba(255, 255, 255, 0.5);
    }
    .toggle-password {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: rgba(255, 255, 255, 0.7);
      font-size: 18px;
    }
    .register-box button {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #36d1dc, #5b86e5);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      margin-top: 16px;
      transition: all 0.3s ease;
    }
    .register-box button:hover {
      background: linear-gradient(135deg, #2193b0, #6dd5ed);
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(91, 134, 229, 0.4);
    }
    .error {
      color: #ffcccc;
      text-align: center;
      font-size: 14px;
      margin-top: 5px;
    }
    .extra-link {
      text-align: center;
      margin-top: 14px;
      font-size: 14px;
    }
    .extra-link a {
      color: #fff;
      text-decoration: underline;
      transition: color 0.3s;
    }
    .extra-link a:hover {
      color: #d1ecf1;
    }
  </style>
</head>
<body>

  <div class="register-box">
    <h2>Create Account</h2>
    <form action="/register" method="POST" id="registerForm">
      <div class="input-group">
        <input type="text" id="username" name="username" placeholder="Username" required />
      </div>
      <div class="input-group">
        <input type="password" id="password" name="password" placeholder="Password" required />
        <span class="toggle-password" onclick="toggleVisibility('password')">üëÅ</span>
      </div>
      <div class="input-group">
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
        <span class="toggle-password" onclick="toggleVisibility('confirmPassword')">üëÅ</span>
      </div>
      <button type="submit">Register</button>
      <p class="error" id="errorMsg"></p>
      <p class="extra-link">Already have an account? <a href="/">Login</a></p>
    </form>
  </div>
  <script>
    function toggleVisibility(fieldId) {
      const field = document.getElementById(fieldId);
      if (field.type === "password") {
        field.type = "text";
      } else {
        field.type = "password";
      }
    }

    document.getElementById('registerForm').addEventListener('submit', function(event) {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const errorMsg = document.getElementById('errorMsg');

      if (password !== confirmPassword) {
        event.preventDefault();
        errorMsg.textContent = "Passwords do not match.";
      } else {
        errorMsg.textContent = "";
      }
    });
  </script>
  
</body>
</html>

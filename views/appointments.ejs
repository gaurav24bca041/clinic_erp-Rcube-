<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Appointments - Clinic ERP</title>
  <link rel="stylesheet" href="/stylesheet/styles.css?v=2">
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <h2>ü©∫ Clinic ERP</h2>
      <nav>
        <a href="/index">Dashboard</a>
        <a href="/patients">Patients</a>
        <a href="/appointments" class="active">Appointments</a>
        <a href="/billing">Billing</a>
        <a href="/reports">Reports</a>
        <a href="/doctor">Doctors</a>
        <a href="/settings">Settings</a>
      </nav>
    </aside>

    <main class="main">
      <header class="topbar">
        <h1>Appointments</h1>
      </header>

      <section class="content">
        <a href="/appointments/add-appointment" class="btn">+ New Appointment</a>

        <table class="data-table">
          <thead>
            <tr>
              <th>ID</th> 
              <th>Patient</th>
              <th>DOB</th> <!-- ‚úÖ New column -->
              <th>Doctor</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Status</th>
              <th>Date</th>
              <th>Time</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
             <% if (appointments && appointments.length > 0) { %>
              <% appointments.forEach((appointment) => { %>
                <tr>
                  <td><%= appointment?.appointmentId %></td>
                  <td><%= appointment?.patient %></td>
                  <td><%= appointment?.dob ? appointment.dob.toISOString().split('T')[0] : '' %></td> <!-- ‚úÖ Show DOB -->
                  <td><%= appointment?.doctor %></td>
                  <td><%= appointment?.address %></td>
                  <td><%= appointment?.phone %></td>
                  <td><%= appointment?.status %></td>
                  <td><%= appointment?.date?.toLocaleDateString() %></td>
                  <td><%= appointment?.time %></td>
                  <td>
                    <a href="/appointments/edit/<%= appointment._id %>" class="btn-small">‚úèÔ∏è Edit</a>
                    <form action="/appointments/delete/<%= appointment._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn-small danger" onclick="return confirm('Are you sure you want to delete this appointment?')">üóë Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
             <% } else { %>
                <tr>
                  <td colspan="10">No appointments found.</td>
                </tr>
             <% } %>
           </tbody>
        </table>
      </section>
    </main>
  </div>
</body>
</html>

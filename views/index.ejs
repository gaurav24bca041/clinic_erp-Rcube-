<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Clinic ERP</title>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    /* Reset */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body, html { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; color: #333; }

    /* Container */
    .container { display: flex; min-height: 100vh; transition: all 0.3s ease; }

    /* Sidebar */
    .sidebar {
      width: 240px;
      background: linear-gradient(180deg, #1b4965, #247ba0);
      color: #fff;
      padding: 25px 20px;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
    }

    .sidebar h2 { margin-bottom: 40px; font-size: 1.5rem; text-align: center; }
    .sidebar nav a {
      display: block;
      color: #e0f7fa;
      text-decoration: none;
      margin-bottom: 18px;
      padding: 12px 15px;
      border-radius: 8px;
      font-size: 1rem;
      transition: 0.3s ease;
    }
    .sidebar nav a:hover, .sidebar nav a.active { background: rgba(255,255,255,0.2); color: #fff; }

    /* Main */
    .main { flex: 1; padding: 25px; transition: all 0.3s ease; }
    .topbar h1 { margin-bottom: 20px; color: #333; font-size: 1.8rem; }

    /* Dashboard Cards */
    .dashboard {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 25px;
    }
    .card {
      display: flex;
      flex-direction: column;
      background: white;
      padding: 25px;
      border-radius: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.07);
      transition: transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
      text-decoration: none;
      color: inherit;
    }
    .card:hover { transform: translateY(-6px); box-shadow: 0 10px 25px rgba(0,0,0,0.1); }
    .card h3 { display: flex; align-items: center; color: #777; font-size: 1.1rem; margin-bottom: 12px; }
    .card h3 .material-symbols-outlined { font-size: 28px; margin-right: 10px; color: #2f80ed; }
    .card .value { font-size: 2.2rem; font-weight: bold; color: #2f3e46; }

    /* Content Box */
    .content {
      background: white;
      padding: 20px;
      border-radius: 20px;
      margin-top: 40px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* Buttons */
    .btn {
      background: #2f80ed;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }
    .btn:hover { background: #1f5bb5; }

    /* Topbar mobile & hamburger */
    .topbar-mobile { display: none; align-items: center; justify-content: space-between; background: #1b4965; color: #fff; padding: 10px 20px; }
    .menu-btn { display: none; background: #1b4965; color: #fff; border: none; font-size: 1.5rem; cursor: pointer; }

    /* Mobile Responsive */
    @media (max-width: 780px) {
      .container { flex-direction: column; }
      .sidebar {
        width: 100%;
        display: none;
        position: absolute;
        top: 50px;
        left: 0;
        height: auto;
        z-index: 1000;
        padding: 15px 20px;
      }
      .topbar-mobile { display: flex; }
      .menu-btn { display: block; }
      .main { padding: 15px; }
      .dashboard { grid-template-columns: 1fr; }
      .card { width: 100%; }
      .content { padding: 15px; }
    }
  </style>
</head>

<body>

  <!-- Topbar Mobile -->
  <div class="topbar-mobile">
    <button class="menu-btn">â˜°</button>
    <h2>ðŸ©º Clinic ERP</h2>
  </div>

  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h2>ðŸ©º Clinic ERP</h2>
      <nav>
        <a href="/index" class="active">Dashboard</a>
        <a href="/patients">Patients</a>
        <a href="/appointments">Appointments</a>
        <a href="/billing">Billing</a>
        <a href="/reports">Reports</a>
        <a href="/doctor">Doctors</a>
        <a href="/settings">Settings</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main">
      <header class="topbar">
        <h1>Welcome, <%= username %></h1>
      </header>

      <!-- Dashboard Cards -->
      <section class="dashboard">
        <a href="/appointments" class="card">
          <h3><span class="material-symbols-outlined">calendar_today</span>Today's Appointments</h3>
          <div class="value"><%= todayAppointments %></div>
        </a>

        <a href="/patients" class="card">
          <h3><span class="material-symbols-outlined">groups</span>New Patients Today</h3>
          <div class="value"><%= newPatients %></div>
        </a>

        <a href="/billing" class="card">
          <h3><span class="material-symbols-outlined">payments</span>Monthly Revenue</h3>
          <div class="value">â‚¹<%= monthlyRevenue %></div>
        </a>

        <a href="/doctor" class="card">
          <h3><span class="material-symbols-outlined">person</span>Active Doctors</h3>
          <div class="value"><%= doctorsActive %></div>
        </a>
      </section>

      <!-- Revenue Chart -->
      <section class="content">
        <label style="font-weight:bold;">Filter by Date Range:</label><br/><br/>
        <input type="date" id="startDate"> to 
        <input type="date" id="endDate">
        <button class="btn" onclick="filterData()">Apply</button>

        <canvas id="revenueChart" height="120"></canvas>
      </section>
    </main>
  </div>

  <!-- Sidebar Toggle Script -->
  <script>
    const menuBtn = document.querySelector('.menu-btn');
    const sidebar = document.querySelector('.sidebar');
    menuBtn.addEventListener('click', () => {
      sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
    });

    // Chart.js
    let revenueData = JSON.parse('<%- JSON.stringify(revenueData) %>');
    const labels = revenueData.map(item => item.date);
    const data = revenueData.map(item => item.revenue);

    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: { labels, datasets: [{ label: 'Revenue', data, borderColor: '#2f80ed', backgroundColor: 'rgba(47,128,237,0.1)', fill:true, tension:0.3, pointRadius:5, pointHoverRadius:7 }] },
      options: { responsive: true, plugins: { legend: { display: true } } }
    });

    function filterData() { alert('Filter function here'); }
  </script>

</body>
</html>

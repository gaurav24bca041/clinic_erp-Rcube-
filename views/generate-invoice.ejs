    <main class="main">
      <header class="topbar">
        <h1>Generate Invoice</h1>
      </header>

      <section class="content">
        <form class="form" action="/billing/generate-invoice" method="post">
            <label>Patient Name</label>
            <input type="text" name="patientName" required />

            <label>Services</label>
            <input type="text" name="services" placeholder="e.g., Consultation, X-ray" required />

            <label>Amount (â‚¹)</label>
            <input type="number" name="amount" required />

            <label>Status</label>
            <select name="status">
                <option>Paid</option>
                <option>Unpaid</option>
            </select>

            <label>Invoice Date</label>
            <input type="date" name="date" value="2025-07-04" />

            <button type="submit" class="btn">Generate Invoice</button>
        </form>

      </section>
    </main>
  </div>
</body>
</html>
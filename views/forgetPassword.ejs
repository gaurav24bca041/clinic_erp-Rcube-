<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Forget Password</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      margin: 0;
      background: linear-gradient(135deg, #ff9a9e, #fad0c4);
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .forget-card {
      background: #ffffff;
      padding: 40px 35px;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 420px;
      animation: fadeIn 0.6s ease-in-out;
    }

    .forget-card h2 {
      text-align: center;
      margin-bottom: 25px;
      font-weight: 600;
      font-size: 1.8rem;
      color: #2f3e46;
    }

    .input-group {
      margin-bottom: 16px;
      position: relative;
    }

    .input-group label {
      font-size: 14px;
      color: #555;
      display: block;
      margin-bottom: 6px;
      font-weight: 500;
    }

    .input-group input {
      width: 100%;
      padding: 12px;
      border: 1px solid #dcdcdc;
      border-radius: 10px;
      font-size: 15px;
      transition: 0.3s ease;
    }

    .input-group input:focus {
      border-color: #ff758c;
      outline: none;
      box-shadow: 0 0 5px rgba(255, 117, 140, 0.3);
    }

    .toggle-password {
      position: absolute;
      top: 38px;
      right: 12px;
      cursor: pointer;
      font-size: 16px;
      color: #666;
      user-select: none;
    }

    .forget-btn {
      width: 100%;
      padding: 12px;
      background: linear-gradient(135deg, #ff758c, #ff7eb3);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      cursor: pointer;
      font-weight: 600;
      transition: 0.3s ease;
    }

    .forget-btn:hover {
      background: linear-gradient(135deg, #ff5a7c, #ff639a);
      transform: translateY(-1px);
    }

    .error {
      color: red;
      text-align: center;
      font-size: 14px;
      margin-top: 10px;
    }

    .links {
      text-align: center;
      margin-top: 20px;
    }

    .links a {
      color: #ff758c;
      text-decoration: none;
      font-size: 14px;
      margin: 0 5px;
      transition: 0.2s ease;
    }

    .links a:hover {
      text-decoration: underline;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 480px) {
      .forget-card {
        padding: 30px 20px;
      }
    }
  </style>
</head>
<body>

  <div class="forget-card">
    <h2>Reset Password</h2>

    <% if (message) { %>
      <p class="error"><%= message %></p>
    <% } %>

    <form action="/forgetPassword" method="POST">
      <div class="input-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" placeholder="Enter your username" required />
      </div>

      <div class="input-group">
        <label for="newPassword">New Password</label>
        <input type="password" name="newPassword" id="newPassword" placeholder="Enter new password" required />
        <span class="toggle-password" onclick="togglePassword('newPassword', this)">üëÅÔ∏è</span>
      </div>

      <div class="input-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm new password" required />
        <span class="toggle-password" onclick="togglePassword('confirmPassword', this)">üëÅÔ∏è</span>
      </div>

      <button type="submit" class="forget-btn">Reset Password</button>
    </form>

    <div class="links">
      <a href="/">Back to Login</a>
    </div>
  </div>

  <script>
    function togglePassword(fieldId, icon) {
      const field = document.getElementById(fieldId);
      if (field.type === "password") {
        field.type = "text";
        icon.textContent = "üôà";
      } else {
        field.type = "password";
        icon.textContent = "üëÅÔ∏è";
      }
    }
  </script>
</body>
</html>

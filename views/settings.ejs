<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Settings - Clinic ERP</title>
  <link rel="stylesheet" href="/stylesheet/styles.css?v=2">
  <style>
    body, html { font-family: 'Segoe UI', sans-serif; margin: 0; background: #f4f6f9; color: #333; }
    .container { display: flex; min-height: 100vh; transition: all 0.3s ease; }
    .sidebar { width: 240px; background: linear-gradient(180deg,#1b4965,#247ba0); color:#fff; padding:25px 20px; box-shadow:2px 0 10px rgba(0,0,0,0.1);}
    .sidebar h2 { text-align:center;margin-bottom:40px;}
    .sidebar nav a { display:block;color:#e0f7fa;text-decoration:none;margin-bottom:18px;padding:12px 15px;border-radius:8px; transition:0.3s ease;}
    .sidebar nav a.active, .sidebar nav a:hover { background: rgba(255,255,255,0.2); color:#fff;}
    .topbar-mobile { display:none; align-items:center; justify-content:space-between; background:#1b4965; color:#fff; padding:10px 20px;}
    .menu-btn { display:none; background:#1b4965; color:#fff; border:none; font-size:1.5rem; cursor:pointer;}
    .main { flex:1; display:flex; flex-direction:column; padding:20px;}
    .topbar { background:#fff; padding:15px 25px; border-bottom:1px solid #e0e0e0;}
    .topbar h1 { font-size:1.6rem; font-weight:600; margin:0; color:#2f3e46;}
    .content { margin-top:20px; }
    .form { background:#fff; padding:25px; border-radius:10px; box-shadow:0 3px 10px rgba(0,0,0,0.08); max-width:700px; }
    .form h3 { margin-top:20px; margin-bottom:10px; color:#2f3e46; }
    .form label { display:flex; flex-direction:column; margin-bottom:15px; font-weight:bold; color:#1b4965; }
    .form input, .form select { padding:10px; border-radius:6px; border:1px solid #ccc; font-size:1rem; }
    .form button { padding:12px 20px; background:#1b4965; color:#fff; border:none; border-radius:8px; cursor:pointer; font-size:1rem; transition:0.3s; }
    .form button:hover { background:#0f3057; }
    @media(max-width:780px){
      .container { flex-direction: column; }
      .sidebar { width: 100%; display: none; position: absolute; top: 50px; left: 0; z-index:1000; padding:15px 20px; }
      .topbar-mobile { display: flex; }
      .menu-btn { display: block; }
      .main { padding: 15px; }
      table { display: block; overflow-x: auto; white-space: nowrap; }
    }
  </style>
</head>
<body>

  <div class="topbar-mobile">
    <button class="menu-btn">â˜°</button>
    <h2>ðŸ©º Clinic ERP</h2>
  </div>

  <div class="container">
    <aside class="sidebar">
      <h2>ðŸ©º Clinic ERP</h2>
      <nav>
        <a href="/index">Dashboard</a>
        <a href="/patients">Patients</a>
        <a href="/appointments">Appointments</a>
        <a href="/billing">Billing</a>
        <a href="/reports">Reports</a>
        <a href="/doctor">Doctors</a>
        <a href="/settings" class="active">Settings</a>
      </nav>
    </aside>

    <main class="main">
      <header class="topbar"><h1>Settings</h1></header>

      <section class="content">
        <% if (message) { %>
          <p style="color:green;"><%= message %></p>
        <% } %>

        <form class="form" action="/settings/update" method="POST">
          <h3>Clinic Details</h3>
          <label>Clinic Name <input type="text" name="clinicName" value="<%= setting.clinicName || '' %>" required></label>
          <label>Address <input type="text" name="address" value="<%= setting.address || '' %>"></label>
          <label>Email <input type="email" name="email" value="<%= setting.email || '' %>"></label>
          <label>Phone <input type="text" name="phone" value="<%= setting.phone || '' %>"></label>

          <h3>Working Hours</h3>
          <label>Opening <input type="time" name="open" value="<%= setting.workingHours ? setting.workingHours.open : '' %>"></label>
          <label>Closing <input type="time" name="close" value="<%= setting.workingHours ? setting.workingHours.close : '' %>"></label>

          <h3>Appointments</h3>
          <label>Slot Duration <input type="number" name="slotDuration" value="<%= setting.appointment ? setting.appointment.slotDuration : 30 %>"></label>
          <label>Max Patients/Day <input type="number" name="maxPatientsPerDay" value="<%= setting.appointment ? setting.appointment.maxPatientsPerDay : 50 %>"></label>

          <h3>Billing</h3>
          <label>Currency <input type="text" name="currency" value="<%= setting.billing ? setting.billing.currency : 'INR' %>"></label>
          <label>Tax (%) <input type="number" step="0.01" name="taxPercent" value="<%= setting.billing ? setting.billing.taxPercent : 0 %>"></label>
          <label>Invoice Prefix <input type="text" name="invoicePrefix" value="<%= setting.billing ? setting.billing.invoicePrefix : 'INV-' %>"></label>

          <h3>Notifications</h3>
          <label><input type="checkbox" name="enableSMS" <%= setting.notification && setting.notification.enableSMS ? 'checked' : '' %>> Enable SMS</label>
          <label><input type="checkbox" name="enableEmail" <%= setting.notification && setting.notification.enableEmail ? 'checked' : '' %>> Enable Email</label>
          <label>Reminder Before (hours) <input type="number" name="reminderBefore" value="<%= setting.notification ? setting.notification.reminderBefore : 24 %>"></label>

          <h3>Language</h3>
          <label>Language
            <select name="language">
              <option value="en" <%= setting.theme && setting.theme.language === 'en' ? 'selected' : '' %>>English</option>
              <option value="hi" <%= setting.theme && setting.theme.language === 'hi' ? 'selected' : '' %>>Hindi</option>
            </select>
          </label>

          <button type="submit">Save Changes</button>
        </form>
      </section>
    </main>
  </div>

  <script>
    const menuBtn = document.querySelector('.menu-btn');
    const sidebar = document.querySelector('.sidebar');
    menuBtn.addEventListener('click', () => {
      sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
    });
  </script>

</body>
</html>

